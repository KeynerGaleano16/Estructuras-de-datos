    private void Cargar1ActionPerformed(java.awt.event.ActionEvent evt) {                                        

      nombreDocumento=jTextArea1.getText();
            jTextArea1.setText("");
            numPaginas=Integer.parseInt(jTextArea2.getText());
            jTextArea2.setText("");
            impresora.agregarDocumento(new Documento(nombreDocumento, numPaginas));

       
    }                                       

    private void jTextArea1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        
    }                                          

    private void jTextArea2ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        
    }                                          

@SuppressWarnings("empty-statement")
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       if(impresora.colaVacia()){
           JOptionPane.showMessageDialog(null, "No se puede imprimir sin documentos");
       }
       
        while (!impresora.colaVacia()) {
            
            Documento documentoActual = impresora.obtenerSiguienteDocumento();
            jLabel9.setText(documentoActual.nombre);
           jLabel1.setText(jLabel1.getText()+"<html>\n<p><html>"+ documentoActual.nombre);
            System.out.println(documentoActual.nombre);
            for (int i=1;i<=documentoActual.numPaginas;i++) {;
                System.out.println(i+"/"+documentoActual.numPaginas);
                try {
                    Thread.sleep(1000); 
                } catch (InterruptedException e) {
                    e.printStackTrace();
                }
                
            }
            jLabel2.setText(jLabel2.getText()+"<html>\n<p><html>"+documentoActual.numPaginas + "/" +documentoActual.numPaginas);
            
        }
    }                                        

